<div class="single-news">
    <div class="news-image">
        <img src="{{ singleNews.getImage }}" alt="">
    </div>

    <div class="news-banderole banderole event-news">
        <div class="news-banderole-content">
            <h2>{{ singleNews.getTitle }}</h2>

            <span class="news-date">{{ singleNews.getEvent.getDate.getWeekday | weekday }}
                | {{ singleNews.getEvent.getDate.getDateString }} | {{ singleNews.getEvent.getDate.getTimeString }}Uhr</span>
        </div>
    </div>

    <div class="news-text">
        <p>{{ singleNews.getText|raw }}</p>
    </div>

    {% if singleNews.facebookLink|length > 0 %}
        <div class="facebook-link">
            <a href="{{ singleNews.facebookLink }}" target="new">
                <img src="{{ templateDir }}/img/fb.png" alt="Teaserbild vom CafÃ©">
            </a>
        </div>
    {% endif %}
</div>